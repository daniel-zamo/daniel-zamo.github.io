---
// src/layouts/TechNoteLayout.astro
import type { CollectionEntry } from "astro:content";

interface Props {
  entry: CollectionEntry<"tech-notes">;
}

const { entry } = Astro.props;
const { lang, date, updated, category, difficulty, author, tags } = entry.data;

const formattedDate = date.toLocaleDateString(lang, {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<article class="tech-note-container">
  <header class="note-meta">
    <div class="main-badges">
      <span class="badge category">{category}</span>
      <span class="badge difficulty">{difficulty}</span>
    </div>

    <div class="date-info">
      <time datetime={date.toISOString()}>ðŸ“… {formattedDate}</time>
      {
        updated && (
          <span class="updated">
            {" "}
            (Actualizado: {updated.toLocaleDateString(lang)})
          </span>
        )
      }
    </div>

    <div class="tags-list">
      {tags.map((tag) => <span class="tag-item">#{tag}</span>)}
    </div>
  </header>

  <hr class="separator" />

  <div class="markdown-content">
    <slot />
  </div>

  <footer class="note-footer">
    <p><strong>Autor:</strong> {author}</p>
  </footer>
</article>

<style>
  .tech-note-container {
    max-width: 100%;
    margin: 0 auto;
  }
  .note-meta {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    margin-bottom: 2rem;
  }
  .main-badges {
    display: flex;
    gap: 0.5rem;
  }
  .badge {
    font-size: 0.7rem;
    font-weight: bold;
    padding: 0.2rem 0.6rem;
    border-radius: 4px;
    text-transform: uppercase;
  }
  .category {
    background: var(--sl-color-accent-low);
    color: var(--sl-color-accent-high);
  }
  .difficulty {
    background: var(--sl-color-gray-5);
    color: var(--sl-color-white);
  }
  .date-info {
    font-size: 0.9rem;
    color: var(--sl-color-gray-3);
  }
  .tags-list {
    display: flex;
    gap: 0.75rem;
  }
  .tag-item {
    color: var(--sl-color-accent);
    font-size: 0.85rem;
    font-family: var(--__sl-font-mono);
  }
  .separator {
    border: 0;
    border-bottom: 1px solid var(--sl-color-gray-5);
    margin: 2rem 0;
  }
  .note-footer {
    margin-top: 4rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--sl-color-gray-5);
    color: var(--sl-color-gray-3);
    font-style: italic;
  }

  /* Ajuste para que el contenido Markdown no se vea apretado */
  .markdown-content :global(h2) {
    margin-top: 2rem;
  }
</style>
